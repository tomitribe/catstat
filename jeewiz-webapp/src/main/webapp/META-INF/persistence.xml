<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!-- Change the PU name -->
    <persistence-unit name="exampleUnit" transaction-type="JTA">

        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <!-- Add your Entity classes below -->
        <class>org.tomitribe.jeewiz.web.model.Account</class>
        <class>org.tomitribe.jeewiz.web.model.Role</class>
        <class>org.tomitribe.jeewiz.web.model.Image</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.discriminator.ignore_explicit_for_joined" value="true"/>
            <property name="hibernate.connection.provider_class"
                      value="org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider"/>

            <!-- Change the driver / UID / PWD information -->
            <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver"/>
            <property name="hibernate.connection.url" value="jdbc:hsqldb:mem:jeewiz"/>
            <property name="hibernate.connection.username" value="sa"/>
            <property name="hibernate.connection.password" value=""/>
            
            <!-- Tune for your needs -->
            <property name="hibernate.c3p0.min_size" value="1"/>
            <property name="hibernate.c3p0.max_size" value="2"/>
            <property name="hibernate.c3p0.acquire_increment" value="1"/>
            <property name="hibernate.c3p0.idle_test_period" value="300"/>
            <property name="hibernate.c3p0.timeout" value="1800"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>

            <property name="hibernate.default_schema" value="PUBLIC"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.order_updates" value="false"/>
            <property name="hibernate.generate_statistics" value="true"/>
            <property name="hibernate.connection.release_mode" value="auto"/>

            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <!-- If you have data to import, add an import SQL script -->

            <property name="hibernate.hbm2ddl.import_files" value="/config/local/import.sql"/>
        </properties>
    </persistence-unit>
</persistence>